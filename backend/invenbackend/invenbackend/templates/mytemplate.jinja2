{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
  <h1><span class="font-semi-bold">Pyramid</span> <span class="smaller">Starter project</span></h1>
  <p class="lead">Welcome to <span class="font-normal">{{ project }}</span>.</p>

  <h2>Daftar Barang</h2>
  {% if barang_list %}
    <ul>
    {% for barang in barang_list %}
      <li>{{ barang.nama_barang }} (stok: {{ barang.stok }})</li>
    {% endfor %}
    </ul>
  {% else %}
    <p>Tidak ada data barang.</p>
  {% endif %}

  <h2>Daftar Supplier</h2>
  {% if supplier_list %}
    <ul>
    {% for supplier in supplier_list %}
      <li>{{ supplier.nama_supplier }} - {{ supplier.kontak }}</li>
    {% endfor %}
    </ul>
  {% else %}
    <p>Tidak ada data supplier.</p>
  {% endif %}

  <h2>Daftar User</h2>
  {% if user_list %}
    <ul>
    {% for user in user_list %}
      <li>{{ user.username }} - {{ user.role }}</li>
    {% endfor %}
    </ul>
  {% else %}
    <p>Tidak ada data user.</p>
  {% endif %}
</div>
{% endblock content %}
